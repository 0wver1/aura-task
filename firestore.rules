rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Only allow users to read and write their own tasks.
    // The task document must have a 'userId' field that matches their auth ID.
    match /tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}